<h3>You answered <%= pluralize(session[:correct_answers_count], "question") %> correctly!
</h3>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Correct Answer</th>
      <th>Your Answer</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= raw(question.content) %></td>
        <td><%= question.answer %></td>
        <td><%= question.actual_answer %></td>
        <td>
        <% if question.is_correct %>
        <p class="text-success">CORRECT
        <% else %>
        <p class="text-danger">INCORRECT
        <% end %>
        </p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


